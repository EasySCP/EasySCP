# Rotation for apache user logs
#
/var/www/virtual/*/logs/*.log {
	weekly
	missingok
	rotate 52
	dateext
	compress
	delaycompress
	notifempty
	create 644 root root
	sharedscripts
}

# Rotation for EasySCP logs
#
/var/log/easyscp/*.log {
	weekly
	missingok
	rotate 52
	compress
	delaycompress
	notifempty
	copytruncate
}