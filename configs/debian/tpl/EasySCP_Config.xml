<EasySCP_Config>
	<BuildDate />
	<Version>2.1.0</Version>
	<DistName />
	<DistVersion />
	<DEFAULT_ADMIN_ADDRESS />
	<SERVER_HOSTNAME />
	<BASE_SERVER_IP />
	<BASE_SERVER_IPv6 />
	<BASE_SERVER_VHOST />
	<BASE_SERVER_VHOST_PREFIX>http://</BASE_SERVER_VHOST_PREFIX>

	<!--
		TODO: Check them when GUI Config has changed to XML
		SQL backend variables
	-->
	<DATABASE_HOST />
	<DATABASE_NAME />
	<DATABASE_PASSWORD />
	<DATABASE_USER />
	<DATABASE_DEFAULT_CHARACTER_SET>utf8</DATABASE_DEFAULT_CHARACTER_SET>
	<DATABASE_DEFAULT_COLLATE>utf8_unicode_ci</DATABASE_DEFAULT_COLLATE>

	<!--
		Main variables
	-->
	<CONF_DIR>/etc/easyscp</CONF_DIR>
	<DAEMON_ROOT_DIR>/var/www/easyscp/daemon</DAEMON_ROOT_DIR>
	<GUI_ROOT_DIR>/var/www/easyscp/gui</GUI_ROOT_DIR>
	<LOG_DIR>/var/log/easyscp</LOG_DIR>
	<ROOT_DIR>/var/www/easyscp</ROOT_DIR>
	<ROOT_GROUP>root</ROOT_GROUP>
	<ROOT_USER>root</ROOT_USER>
	<SOCK_EASYSCPC>/var/run/easyscp_control/easyscp_control.sock</SOCK_EASYSCPC>
	<SOCK_EASYSCPD>/var/run/easyscp_daemon/easyscp_daemon.sock</SOCK_EASYSCPD>
	<SRV_TRAFF_LOG_DIR>/var/log/easyscp/srv-traff</SRV_TRAFF_LOG_DIR>

	<!--
		PHP data
	-->
	<PEAR_DIR>/usr/share/php</PEAR_DIR>
	<PHP_STARTER_DIR>/var/www/fcgi</PHP_STARTER_DIR>
	<PHP_TIMEZONE />
	<PHP_VERSION>5</PHP_VERSION>
	<PHP5_CONF_DIR>/etc/php5/conf.d</PHP5_CONF_DIR>
	<PHP5_FASTCGI_BIN>/usr/bin/php5-cgi</PHP5_FASTCGI_BIN>

	<!--
		ProFTPd data
	-->
	<FTPD_CONF_DIR>/etc/proftpd/conf.d</FTPD_CONF_DIR>
	<FTPD_CONF_FILE>/etc/proftpd/proftpd.conf</FTPD_CONF_FILE>
	<FTPD_MODULES_CONF_FILE>/etc/proftpd/modules.conf</FTPD_MODULES_CONF_FILE>
	<FTPD_SQL_CONF_FILE>/etc/proftpd/sql.conf</FTPD_SQL_CONF_FILE>

	<!--
		PowerDNS data
	-->
	<PDNS_CONF_FILE>/etc/powerdns/pdns.conf</PDNS_CONF_FILE>
	<PDNS_DB_DIR>/etc/powerdns/pdns.d</PDNS_DB_DIR>
	<SECONDARY_DNS />

	<!--
		Resolver
	-->
	<LOCAL_DNS_RESOLVER />

	<!--
		AWStats data
	-->
	<AWSTATS_ACTIVE>no</AWSTATS_ACTIVE>
	<AWSTATS_CACHE_DIR>/var/cache/awstats</AWSTATS_CACHE_DIR>
	<!--
		could be 'dynamic' = 0 or 'static' = 1
	-->
	<AWSTATS_MODE>0</AWSTATS_MODE>

	<!--
		Apache data
	-->
	<APACHE_BACKUP_LOG_DIR>/var/log/apache2/backup</APACHE_BACKUP_LOG_DIR>
	<APACHE_CUSTOM_SITES_CONFIG_DIR>/etc/apache2/easyscp</APACHE_CUSTOM_SITES_CONFIG_DIR>
	<APACHE_GROUP>www-data</APACHE_GROUP>
	<APACHE_LOG_DIR>/var/log/apache2</APACHE_LOG_DIR>
	<APACHE_MODS_DIR>/etc/apache2/mods-available</APACHE_MODS_DIR>
	<APACHE_SITES_DIR>/etc/apache2/sites-available</APACHE_SITES_DIR>
	<APACHE_SUEXEC_MIN_GID>2000</APACHE_SUEXEC_MIN_GID>
	<APACHE_SUEXEC_MIN_UID>2000</APACHE_SUEXEC_MIN_UID>
	<APACHE_SUEXEC_USER_PREF>vu</APACHE_SUEXEC_USER_PREF>
	<APACHE_TRAFFIC_LOG_DIR>/var/log/apache2/traffic</APACHE_TRAFFIC_LOG_DIR>
	<APACHE_USER>www-data</APACHE_USER>
	<APACHE_WWW_DIR>/var/www/virtual</APACHE_WWW_DIR>

	<!--
		Postfix MTA data
	-->
	<POSTFIX_CONF_FILE>/etc/postfix/main.cf</POSTFIX_CONF_FILE>
	<POSTFIX_MASTER_CONF_FILE>/etc/postfix/master.cf</POSTFIX_MASTER_CONF_FILE>
	<MTA_LOCAL_MAIL_DIR>/var/mail</MTA_LOCAL_MAIL_DIR>
	<MTA_VIRTUAL_MAIL_DIR>/var/mail/virtual</MTA_VIRTUAL_MAIL_DIR>
	<MTA_LOCAL_ALIAS_HASH>/etc/aliases</MTA_LOCAL_ALIAS_HASH>
	<MTA_VIRTUAL_CONF_DIR>/etc/postfix/easyscp</MTA_VIRTUAL_CONF_DIR>
	<MTA_VIRTUAL_ALIAS>mysql:/etc/postfix/easyscp/mysql-virtual_forwardings.cf, mysql:/etc/postfix/easyscp/mysql-virtual_email2email.cf</MTA_VIRTUAL_ALIAS>
	<MTA_VIRTUAL_DMN>mysql:/etc/postfix/easyscp/mysql-virtual_domains.cf</MTA_VIRTUAL_DMN>
	<MTA_VIRTUAL_MAILBOX>mysql:/etc/postfix/easyscp/mysql-virtual_mailboxes.cf</MTA_VIRTUAL_MAILBOX>
	<MTA_TRANSPORT>mysql:/etc/postfix/easyscp/mysql-virtual_transports.cf</MTA_TRANSPORT>
	<MTA_MAILBOX_MIN_UID>1004</MTA_MAILBOX_MIN_UID>
	<MTA_MAILBOX_UID>1004</MTA_MAILBOX_UID>
	<MTA_MAILBOX_UID_NAME>vmail</MTA_MAILBOX_UID_NAME>
	<MTA_MAILBOX_GID>8</MTA_MAILBOX_GID>
	<MTA_MAILBOX_GID_NAME>mail</MTA_MAILBOX_GID_NAME>
	<MTA_SSL_STATUS>1</MTA_SSL_STATUS>

	<!--
		Dovecot
	-->
	<DOVECOT_CONF_DIR>/etc/dovecot</DOVECOT_CONF_DIR>

	<!--
		Postgrey data
	-->
	<PORT_POSTGREY>10023</PORT_POSTGREY>

	<!--
		GUI config
	-->
	<MYSQL_PREFIX>no</MYSQL_PREFIX>
	<!--
		'' for MYSQL_PREFIX = no,
		'infront' or 'behind' for MYSQL_PREFIX = yes
	-->
	<MYSQL_PREFIX_TYPE />

	<CHKROOTKIT_LOG>/var/log/chkrootkit.log</CHKROOTKIT_LOG>
	<RKHUNTER_LOG>/var/log/rkhunter.log</RKHUNTER_LOG>

	<!--
		Here you can set an additional anti-rootkit tool log file
	-->
	<OTHER_ROOTKIT_LOG />

	<!--
		Please, do not change it manually
		This entry is used for the update/recovery process
	-->
	<PMA_USER>pma</PMA_USER>

	<!--
		Backup management
	-->
	<BACKUP_FILE_DIR>/var/www/easyscp/backups</BACKUP_FILE_DIR>

	<!--
		Debug Mode (e.g. for developers)
		options: 0 = off, 1 = on
	-->
	<DEBUG>0</DEBUG>

	<!--
		SSL data
	-->
	<SSL_CERT_DIR>/etc/ssl/certs</SSL_CERT_DIR>
	<SSL_KEY_DIR>/etc/ssl/private</SSL_KEY_DIR>
	<SSL_STATUS>0</SSL_STATUS>

	<!--
		CRON data
	-->
	<CRON_DIR>/etc/cron.d/</CRON_DIR>

</EasySCP_Config>